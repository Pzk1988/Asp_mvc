@model  SportsStore.WebUI.Models.NavViewModel

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (string item in Model.Categories)
{
    @Html.RouteLink(item, new
    {
        controller = "Product",
        action = "List",
        category = item,
        page = 1
    },
    new
    {
        @class = "btn btn-block btn-default btn-lg" + (item == Model.SelectedCategory ? " btn-primary" : "")
    })
}

